{{#mdl-layout fixedHeader=true}}
  {{#mdl-layout-header}}
    {{mdl-toolbar title=type navigateUpTo="services.maintenance.index"}}
  {{/mdl-layout-header}}

  {{#mdl-layout-content}}
    Send {{type}} maintenance request here

    <br><br><br>
    {{mdl-textarea label="Maintenance Request"
                   required=true
                   fullWidth=true
                   customError=customError
                   placeholder="Type your message here..."
                   errorMessage=errorMessage
                   rows=5
                   floatingLabel=true
                   tooltip="Text field"}}

    {{#mdl-button type="raised" click=(action (mut errorMessage) "This is a custom error message")}}Submit{{/mdl-button}}
  {{/mdl-layout-content}}
{{/mdl-layout}}

